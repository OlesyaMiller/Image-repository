<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @album.title %>
</p>

<p>
  <strong>User:</strong>
  <%= current_user.username %>
</p>

<p>
  <strong>Images:</strong>
  <br>
  <% if @album.images.attached? %>
    <% @album.images.each do |image| %>
      <%= image_tag image, width: "200px" %>
      <%= button_to 'Remove Image', delete_image_attachment_album_path(image), method: :delete, data: {confirm: "Are you sure?"} %>
    <% end %>
  <% end %>
</p>

<%= link_to 'Edit Album', edit_album_path(@album) %>
<%= button_to 'Delete Album', @album, :method => :delete, data: { confirm: "Are you sure you want to delete this album?" } %>  
<%= link_to "Back to My Albums", user_albums_path(current_user) %><br/>