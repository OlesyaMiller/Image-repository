<p id="notice"><%= notice %></p>


<% if logged_in? %>
    <h2><%= current_user.username %>'s Albums</h2>

    <% @albums.each do |album| %>
        <%= link_to album.title, album_path(album) %>
        <%= button_to 'Delete Album', album_path(album), method: :delete, data: { confirm: "Are you sure you want to delete this album?" } %>  
<br/>
    <% end %>

    <br>

    <%= link_to 'New Album', new_album_path %>
<% end %> 