<!DOCTYPE html>
<html>
  <head>
    <title>ShopifyBackEndChallenge</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
    <!-- <p>You are logged in as <%= current_user.username %> </p> -->
    <ul class="nav justify-content-center border bg-dark">
      <li class="nav-item">
        <a class="nav-link p-4" href="/">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link p-4" href="<%= user_path(current_user) %>">My Profile</a>
      </li>
      <li class="nav-item">
        <a class="nav-link p-4" href="<%= logout_path %>">Log Out</a>
      </li>  
    </ul>
  <% end %>

    <div class = "container p-4"> 
        <%= yield %>
    <br/>
    <% if flash[:message] %>
      <%= flash[:message] %>
    <% end %> 

    </div>    
  </body>
</html>
